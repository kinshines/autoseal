<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <SurfaceView
        android:id="@+id/camera_surfaceview"
        android:layout_width="0.1dp"
        android:layout_height="0.1dp" />
<android.support.v7.widget.CardView
    android:id="@+id/card_seal_process"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/card_view_horizontal_margin"
    android:layout_marginLeft="@dimen/card_view_horizontal_margin"
    android:layout_marginRight="@dimen/card_view_horizontal_margin"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="false">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_seal_process"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="16dp"
            android:textSize="@dimen/body1_primary"/>
        <android.support.v7.widget.AppCompatButton
            android:layout_margin="@dimen/card_view_horizontal_margin"
            android:id="@+id/btn_confirm_seal"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:text="确认盖章"/>
    </LinearLayout>

</android.support.v7.widget.CardView>
</LinearLayout>
